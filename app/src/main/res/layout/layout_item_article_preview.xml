<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/teal_200"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="8dp"
    android:padding="8dp"
    app:cardCornerRadius="24dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/imageViewArticlePreview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/ic_launcher_background"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            />
        <TextView
            android:id="@+id/textViewArticlePreviewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hello g how are You iam fine"
            android:textColor="@color/white"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="120dp"
            android:maxLines="2"
            />
        <TextView
            android:id="@+id/textViewArticlePreviewPublishedAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date and Time"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/textViewArticlePreviewTitle"
            />

        <TextView
            android:id="@+id/textViewArticlePreviewSource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Source"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="24dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/textViewArticlePreviewTitle"
            />


    </RelativeLayout>

</androidx.cardview.widget.CardView>